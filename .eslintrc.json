{
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": ["build/", "node_modules/", "*.js"]
}